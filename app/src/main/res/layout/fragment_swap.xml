<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_toolbar" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp17"
            android:layout_marginVertical="@dimen/dp15"
            android:background="@drawable/background_address_bar"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp10">

                <Spinner
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:layout_gravity="start"
                    android:background="@drawable/background_spinner_square"
                    android:padding="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/font_bold"
                    android:hint="00.00"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:textSize="@dimen/sp20" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:ellipsize="end"
                android:fontFamily="@font/font_regular"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Balance: 100.000 WJAX"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp14" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp25"
            android:layout_gravity="center"
            android:background="@drawable/background_blue_border_button"
            android:padding="@dimen/dp5"
            android:rotation="90"
            android:src="@drawable/ic_transactions"
            android:tint="@color/white" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp17"
            android:layout_marginVertical="@dimen/dp15"
            android:background="@drawable/background_address_bar"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp10">

                <Spinner
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:layout_gravity="start"
                    android:background="@drawable/background_spinner_square"
                    android:padding="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/font_bold"
                    android:hint="00.00"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:textSize="@dimen/sp20" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:ellipsize="end"
                android:fontFamily="@font/font_regular"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Balance: 100.000 WJAX"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp14" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp10"
            android:ellipsize="end"
            android:fontFamily="@font/font_semibold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="1 WJAX = 1 J-USD"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp14"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp17"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/background_blue_border_button"
            android:ellipsize="end"
            android:fontFamily="@font/font_semibold"
            android:lines="1"
            android:text="Enter an amount"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
